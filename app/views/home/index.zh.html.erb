        <%= image_tag "tutorial-2_cn.jpg", :width => 250 %>
        <br/>
        <%= image_tag "tutorial-3_cn.jpg", :width => 250 %>
        <br/>
        <%= image_tag "tutorial-4_cn.jpg", :width => 250 %>
      </aside>
    </article>
  </section>

